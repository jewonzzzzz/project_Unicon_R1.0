<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:security="http://www.springframework.org/schema/security"
    xsi:schemaLocation="
        http://www.springframework.org/schema/security 
        http://www.springframework.org/schema/security/spring-security-4.3.xsd
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Method 보안 활성화 -->
    <security:global-method-security 
    pre-post-enabled="true"
    secured-annotations="enabled"
    jsr250-annotations="enabled" />

    <!-- 보안 설정 -->
    <http auto-config="true" use-expressions="true">
        <!-- 접근 권한 설정 -->
        <intercept-url pattern="/api/admin/**" access="hasRole('ROLE_ADMIN')" />
        <intercept-url pattern="/api/notice/**" access="permitAll" />
        
        <!-- 로그인 설정 -->
        <form-login 
            login-page="/login"
            login-processing-url="/login"
            default-target-url="/"
            authentication-failure-url="/login?error"
            username-parameter="username"
            password-parameter="password"
        />
        
        <!-- 로그아웃 설정 -->
        <logout
            logout-url="/logout"
            logout-success-url="/"
            invalidate-session="true"
            delete-cookies="JSESSIONID"
        />
        
        <!-- CSRF 보호 비활성화 (REST API를 위해) -->
        <csrf disabled="true"/>
    </http>

    <!-- 인증 관리자 설정 -->
    <authentication-manager>
        <authentication-provider>
            <!-- 실제 구현시에는 데이터베이스 연동으로 변경해야 함 -->
            <user-service>
                <user name="admin" password="{noop}admin123" authorities="ROLE_ADMIN" />
            </user-service>
        </authentication-provider>
    </authentication-manager>

</beans:beans>